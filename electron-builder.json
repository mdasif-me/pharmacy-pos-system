{
  "appId": "com.pharmacy.pos",
  "productName": "Pharmacy POS",
  "copyright": "Copyright Â© 2025",
  "files": ["dist-electron/**/*", "dist-react/**/*", "package.json"],
  "extraResources": ["src/assets/**"],
  "asarUnpack": ["dist-react/**/*", "dist-electron/preload.cjs"],
  "directories": {
    "output": "release-windows",
    "buildResources": "build"
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": true,
  "includeSubNodeModules": true,
  "mac": {
    "target": "dmg",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "publisherName": "Pharmacy POS",
    "verifyUpdateCodeSignature": false,
    "sign": null,
    "signAndEditExecutable": false,
    "signDlls": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "allowElevation": true,
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "installerHeaderIcon": "build/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Pharmacy POS",
    "perMachine": true,
    "runAfterFinish": true,
    "deleteAppDataOnUninstall": false,
    "installerLanguages": ["en_US"],
    "license": "LICENSE.txt",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "displayLanguageSelector": false,
    "warningsAsErrors": false
  }
}
