{
  "appId": "com.pharmacy.pos",
  "productName": "Pharmacy POS",
  "copyright": "Copyright Â© 2025",
  "files": ["dist-electron/**/*", "dist-react/**/*", "package.json"],
  "extraResources": ["src/assets/**"],
  "asarUnpack": ["dist-react/**/*"],
  "directories": {
    "output": "release-windows",
    "buildResources": "build"
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": true,
  "includeSubNodeModules": true,
  "mac": {
    "target": "dmg",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "publisherName": "Pharmacy POS",
    "verifyUpdateCodeSignature": false,
    "sign": null,
    "signAndEditExecutable": false,
    "signDlls": false
  }
}
