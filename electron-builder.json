{
  "appId": "com.pharmacy.pos",
  "productName": "Pharmacy POS",
  "copyright": "Copyright Â© 2025",
  "files": ["dist-electron", "dist-react"],
  "extraResources": ["dist-electron/preload.cjs", "src/assets/**"],
  "icon": "./desktopIcon.png",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "mac": {
    "target": "dmg",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Office"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      }
    ],
    "icon": "./desktopIcon.png",
    "publisherName": "Pharmacy POS",
    "verifyUpdateCodeSignature": false
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Pharmacy POS",
    "installerIcon": "./desktopIcon.png",
    "uninstallerIcon": "./desktopIcon.png",
    "installerHeaderIcon": "./desktopIcon.png",
    "license": "LICENSE.txt",
    "warningsAsErrors": false
  }
}
